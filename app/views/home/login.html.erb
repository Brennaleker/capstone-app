<%= render partial: "shared/baseheader" %>
<%= render partial: "shared/basenav" %>

  <div class = "form center-form">
    <%= form_tag({controller:'home', action: 'login'}, method: "post") do %>
      <legend>Login</legend>
      <div class = "form-group">
        <%= label_tag 'username', "Username:" %>
        <%= text_field_tag 'username', class: 'form-control', placeholder: "Bob_1" %>
      </div>
      <div class = "form-group">
        <%= label_tag :password, "Password:" %>
        <%= text_field_tag 'password', class: "form-control", id: 'password', placeholder: "password" %>
      </div>

      <%= submit_tag "Login", class: 'btn form-btn' %>
    <% end %>
  </div>
